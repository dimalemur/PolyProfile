.Students {
  &-Changemode {
    display: flex;
    justify-content: space-around;
  }
  &-Input {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  h2 {
    text-align: center;
  }
}

@media screen and (max-width: 850px) {
  .Students {
    &-Changemode {
      flex-direction: column;
      button {
        margin: 10px 0;
      }
    }
  }
}
